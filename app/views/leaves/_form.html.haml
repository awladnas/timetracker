= form_for(@leafe) do |f|
  - if @leafe.errors.any?
    #error_explanation
      %h2
        = pluralize(@leafe.errors.count, "error")
        prohibited this leafe from being saved:
      %ul
        - @leafe.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .field
    = f.label :reason
    %br/
    = f.text_area :reason
  .field
    = f.label :leave_type
    %br/
    = f.number_field :leave_type
  .field
    = f.label :status
    %br/
    = f.number_field :status
  .actions
    = f.submit
