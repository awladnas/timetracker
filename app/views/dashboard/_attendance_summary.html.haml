.panel.panel-default
  .panel-heading
    %b Your current month attendance summary

  %table.table.table-bordered.table-hover
    %tbody
      %tr
        %td Avg. in time
        %td= monthly_average_check_in_time(@attendance_summary)
      %tr
        %td Avg. hours
        %td= monthly_average_hours(monthly_total_hours(@attendance_summary), @attendance_summary.size)
      %tr
        %td Total hours
        %td= monthly_total_hours(@attendance_summary)