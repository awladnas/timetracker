!!!
%html
  %head
    %title Time Tracker | Nascenia
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = favicon_link_tag 'nascenia-logo-motif-only.png'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .container
      %nav.navbar.navbar-default{:role => "navigation"}
        .navbar-header
          %a.navbar-brand{:href => "#{root_path}"} Nascenia Time Tracker
        #navbarCollapse.collapse.navbar-collapse
          - if user_signed_in?
            %ul.nav.navbar-nav
              %li.pull-right
                %p.user-status
                  Signed in as
                  %span
                    = current_user.name
                  email:
                  %span
                    = current_user.email
            %ul.nav.navbar-nav.navbar-right
              - if current_user.is_admin?
                %li
                  = link_to 'Admin', admin_dashboard_path, :target => '_blank'
              %li
                \#{link_to "My Leave", leave_user_path(current_user)}
              %li
                \#{link_to "Logout", destroy_user_session_path, method: :delete}
      - if notice
        .notice.alert-success= notice
      - elsif alert
        .alert.alert-warning= alert
      = yield
  %footer
    = render partial: 'attendances/office_rules'