!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:http => {:equiv => "X-UA-Compatible"}, :content => "IE=edge"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}
    %meta{:name => "description", :content => ""}
    %meta{:name => "author", :content => ""}
    %title Nascenia | Time tracker

    = favicon_link_tag 'nascenia-logo-motif-only.png'
    = stylesheet_link_tag 'application', :media => 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top
      %div.container
        %div.navbar-header
          %button.navbar-toggle.collapsed{:type => "button", :data => {:toggle => "collapse", :target => "#navbar"}, :aria => {:expanded => "false", :controls => "navbar"}}
            %span.sr-only
              Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => '/'}
            = image_tag 'logo.png', style: 'margin-top: -25px;'

        %div#navbar.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              = link_to 'Daily TT', daily_attendances_path
            %li
              = link_to 'Monthly TT', monthly_attendances_path
            %li
              = link_to 'My Leave', leave_user_path(current_user)
            %li
              %a{:href => '#'} About
            - if current_user.is_admin?
              %li
                = link_to 'Admin', admin_dashboard_path, :target => '_blank'
            %li
              = link_to 'Logout', destroy_user_session_path, method: :delete

    <!-- /.container -->
    .container
      .starter-template
        = yield

    %footer
      %p.text-center
        &copy; Copyright 2016
