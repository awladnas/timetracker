= form_for(@attendance) do |f|
  - if @attendance.errors.any?
    #error_explanation
      %h2
        = pluralize(@attendance.errors.count, "error")
        prohibited this attendance from being saved:
      %ul
        - @attendance.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .field
    = f.label :checkin_date
    %br/
    = f.date_select :checkin_date
  .field
    = f.label :in_time
    %br/
    = f.time_select :in_time
  .field
    = f.label :out_time
    %br/
    = f.time_select :out_time
  .actions
    = f.submit
