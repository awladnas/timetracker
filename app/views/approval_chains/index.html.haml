.panel.panel-default
  .panel-heading
    %h4 Current Paths

  .panel-body
    %table.table.table-bordered.table-hover
      %thead
        %tr
          %th Path Name
          %th Path Chain
          %th Action
      %tbody
        - @approval_paths.each do |path|
          %tr
            %td
              = path.name
            %td
              - path.path_chains.order(priority: :desc).each do |chain|
                = chain.user.name + '--> '
            %td
              = link_to 'Assign', approval_chain_path(path)
              |
              = link_to 'Edit', edit_approval_chain_path(path)
              |
              = link_to 'Delete', approval_chain_path(path), method: :delete, data: {confirm: 'Are you sure?'}
  .panel-footer
    .link-button
      = link_to 'Create New Path', new_approval_chain_path, :class => 'btn btn-primary'
