.panel.panel-default
  .panel-heading
    %h3
      = heading
  = form_for @holiday do |f|
    .panel-body
      = f.hidden_field :holiday_scheme_id, value:@holiday_scheme.id
      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'
      .form-group
        = f.label :date
        = f.text_field :date, class: 'form-control'
    .panel-footer
      = f.submit btn_label, class: 'btn btn-primary'